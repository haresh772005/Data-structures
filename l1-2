#include<stdio.h>
int main(){
    int n,arr[n],i,j;
    printf("enter the number of elements : ");
    scanf("%d",&n);
     printf("enter %d elements : \n",n);
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    printf(" even numbers in the array :\n ");
    for(i=0;i<n;i++){
        if(arr[i]%2==0)
        {
        printf("%d ",arr[i]);
        }
    }
    printf("\n");
    printf(" odd numbers in the array : \n");
    for(j=0;j<n;j++){
        if(arr[j]%2==1){
            printf("%d ",arr[j]);
        }
    }
}
